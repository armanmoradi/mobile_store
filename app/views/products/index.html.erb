<h1>Product list</h1>

<table>
    <thead>
        <tr>
            <th>Name:</th>
            <th>Description:</th>
            <th>Action:</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= link_to 'show', product_path(product) %></td>
            <td><%= link_to 'edit', edit_product_path(product) %></td>
            <td><%= link_to 'delete', product_path(product), method: :delete %></td>
        </tr>
        <% end %>
    </tbody>

</table>