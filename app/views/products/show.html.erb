<div id="page-content">
    <h1 class="text-center mt-4">Show product</h1>
    <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                            Added by Arman moradi
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= @product.name %></h5>
                            <p class="card-text"><%= @product.description %></p>
                            <%= link_to 'show', product_path(@product) , class: "btn btn-outline-success" %>
                            <%= link_to 'edit', edit_product_path(@product), class: "btn btn-outline-info" %>
                            <%= link_to 'delete', product_path(@product), method: :delete, data: { confirm: "Are you sure?"} , class: "btn btn-outline-danger"  %>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Created <%= time_ago_in_words(@product.created_at)%> ago,
                                    edited <%= time_ago_in_words(@product.updated_at) %> ago</small>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
