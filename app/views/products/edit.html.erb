<h1>Update Product</h1>
<% if @product.errors.any? %>
    <h2>The following errors prevented the product from being saved</h2>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @product, local: true) do |f|  %>

    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p>
     <%= f.submit %>
    </p>

    <% end %>

    <%= link_to 'return to product listing', products_path %>